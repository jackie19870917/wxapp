.page_header {
  width: 100%;
  display: flex;
  justify-content: center;
  background-color: #eee;
  z-index: 5;
}

.scrollview{
  background-color: #f3f3f3;
}
.page_header_text {
  padding: 20rpx 40rpx;
  color: #999;
  font-size: 40rpx;
  text-align: center;
}


.joke-item {
  margin-top: 40rpx;
  z-index: 15;
  margin-left: 30rpx;
  margin-right: 30rpx;
  border-radius: 10rpx;
  box-shadow: 2px 3px 3px #999;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
}

.item-title {
  background: #eee;
  width: 100%;
  margin: 0 auto;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  border-bottom-right-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}

.item-img {
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  width: 100%;
  margin: 0 auto;
}
