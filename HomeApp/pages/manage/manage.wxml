<!--pages/manage/manage.wxml-->
<view class="images-wrapper">
  <text class="images-text">请选择图片</text>
  <view class="images-list">
    <block wx:for="{{imageList}}">
      <image src="{{item}}" class="images-image" data-src="{{item}}" bindtap="previewImage"></image>
    </block>
    <image src="/images/plus.png" class="images-image images-image-plus" bindtap="chooseImage"></image>
  </view>
</view>
